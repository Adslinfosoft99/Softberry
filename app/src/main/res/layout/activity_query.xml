<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity.Login.ActivityLogin">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_franchies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Job Status"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_franchies"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_disable"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/sanspro_regular"
                        android:hint="Enquiry"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text="Enquiry"
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linLay1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/sanspro_semibold"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="2dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="Target Date"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/et_date"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/txt_date"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/border_grey"
                                android:editable="false"
                                android:focusable="false"
                                android:fontFamily="@font/sanspro_regular"
                                android:hint="MM/dd/yyyy"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:singleLine="true"
                                android:text="Xx/xx/Xxxxx"
                                android:textColor="@color/header_text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="14dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/sanspro_semibold"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="2dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="Number of Images"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/et_image"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/txt_img"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/border_grey"
                                android:fontFamily="@font/sanspro_regular"
                                android:hint="No. of Images"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/header_text_color"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Company"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_company"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_company"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_disable"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/sanspro_regular"
                        android:hint="Company"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Contact Person"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_contact"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_contact"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_disable"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/sanspro_regular"
                        android:hint="Contact Person"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linLay2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_mobile1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/sanspro_semibold"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="2dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="Mobile 1"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/et_mobile1"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/txt_mobile1"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/border_disable"
                                android:editable="false"
                                android:focusable="false"
                                android:fontFamily="@font/sanspro_regular"
                                android:hint="Mobile 1"
                                android:inputType="number"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/header_text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="14dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_mobile2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/sanspro_semibold"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="2dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="Mobile 2"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/et_mobile2"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/txt_mobile2"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/border_grey"
                                android:fontFamily="@font/sanspro_regular"
                                android:hint="Mobile 2"
                                android:inputType="number"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/header_text_color"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linLay3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_email1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/sanspro_semibold"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="2dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="Email ID 1"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/et_email1"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/txt_email1"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/border_disable"
                                android:editable="false"
                                android:focusable="false"
                                android:fontFamily="@font/sanspro_regular"
                                android:hint="Email ID 1"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/header_text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="14dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_email2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/sanspro_semibold"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingLeft="2dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="Email ID 2"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/grey"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/et_email2"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/txt_email2"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/border_grey"
                                android:fontFamily="@font/sanspro_regular"
                                android:hint="Email ID 2"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/header_text_color"
                                android:textSize="14dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Job Description"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Select Product"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <RelativeLayout
                        android:id="@+id/relFranchies"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_select"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_grey"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            android:fontFamily="@font/sanspro_regular"
                            android:hint="Select Product"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/grey"
                            android:textSize="13dp" />


                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            app:srcCompat="@drawable/ic_down_arrow" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Product Quantity"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_qty"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_qty"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_grey"
                        android:fontFamily="@font/sanspro_regular"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_marketing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Marketing"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_marketing"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_marketing"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_disable"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/sanspro_regular"
                        android:hint="Marketing"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_descr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Product Description"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_descr"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/txt_descr"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_grey"
                        android:fontFamily="@font/sanspro_regular"
                        android:gravity="top"
                        android:hint="Product Description"
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="3dp"
                        android:text=""
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_button1"
                    android:fontFamily="@font/sanspro_semibold"
                    android:text="Add Product"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:name="com.adsl.datatracksystem.frag.HistoryFragment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_msg"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:visibility="gone"
                    app:layoutManager="LinearLayoutManager"
                    tools:context="com.loti92.datatracksystem.frag.HistoryFragment"
                    tools:listitem="@layout/fragment_item" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Comment"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/txt_comment"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_grey"
                        android:fontFamily="@font/sanspro_regular"
                        android:gravity="top"
                        android:hint="Comment"
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="3dp"
                        android:text=""
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />
                </RelativeLayout>


                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_button1"
                    android:fontFamily="@font/sanspro_semibold"
                    android:text="Submit"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progress_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="0dp"
        android:visibility="gone"
        app:cpv_animAutostart="false"
        app:cpv_color="@color/loading_color"
        app:cpv_indeterminate="true"
        app:cpv_thickness="4dp" />

</RelativeLayout>
