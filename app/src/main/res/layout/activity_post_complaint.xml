<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity.Login.ActivityLogin">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Date"
                        android:textColor="@color/text_color"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_date"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_date"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_corner"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/sanspro_regular"
                        android:hint="MM/dd/yyyy"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Job Number"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <RelativeLayout
                        android:id="@+id/relJobNo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_select"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_grey"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_jobNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            android:fontFamily="@font/sanspro_regular"
                            android:hint="Select Job Number"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/grey"
                            android:textSize="14dp" />


                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            app:srcCompat="@drawable/ic_down_arrow" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_selectIssue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Issue"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <RelativeLayout
                        android:id="@+id/relIssues"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_selectIssue"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_grey"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_Issue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            android:fontFamily="@font/sanspro_regular"
                            android:hint="Select Issue"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/grey"
                            android:textSize="14dp" />


                        <ImageView
                            android:id="@+id/image5"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            app:srcCompat="@drawable/ic_down_arrow" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_descr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sanspro_semibold"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="Description"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_descr"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/txt_descr"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_grey"
                        android:fontFamily="@font/sanspro_regular"
                        android:gravity="top"
                        android:hint="Enter Description...."
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="3dp"
                        android:text=""
                        android:textColor="@color/header_text_color"
                        android:textColorHint="@color/grey"
                        android:textSize="13dp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_button1"
                    android:fontFamily="@font/sanspro_semibold"
                    android:text="Submit"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progress_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="0dp"
        android:visibility="gone"
        app:cpv_animAutostart="false"
        app:cpv_color="@color/loading_color"
        app:cpv_indeterminate="true"
        app:cpv_thickness="4dp" />
</RelativeLayout>